{
  "name": "sails-arangodb",
  "version": "0.1.0",
  "description": "arangodb adapter for Sails / Waterline",
  "main": "./lib/adapter.js",
  "scripts": {
    "test": "node test/integration/runner -R spec -b",
    "lint": "jshint lib/*.js"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/rosmo/sails-arangodb.git"
  },
  "keywords": [
    "arangodb",
    "adapter",
    "sails",
    "waterline",
    "sails.js",
    "plugin"
  ],
  "author": "Taneli Lepp√§ <rosmo@sektori.com>",
  "license": "MIT",
  "readmeFilename": "README.md",
  "dependencies": {
    "arangojs": "^3.3.0",
    "q": "^1.0.1",
    "underscore": "^1.6.0",
    "async": "^0.9.0",
    "aqb": "~1.8.2"
  },
  "devDependencies": {
    "captains-log": "~0.11.0",
    "jshint": "^2.6.3",
    "mocha": "*",
    "waterline-adapter-tests": "~0.10.0"
  },
  "waterlineAdapter": {
    "type": "arangodb",
    "interfaces": [
      "semantic",
      "queryable"
    ],
    "waterlineVersion": "~0.10.0"
  },

  "jshintConfig": {
    "bitwise": true,
    "curly": false,
    "eqeqeq": false,
    "latedef": true,
    "shadow": "inner",
    "undef": false,
    "unused": false,
    "node": true,
    "sub": true
  }
}
